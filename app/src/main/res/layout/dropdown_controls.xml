<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/notification_controller">


    <LinearLayout
        android:id="@+id/buttons_row"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/notification_speaker"
            android:text="speaker"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/notification_passage"
            android:text="passage"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        >

        <ImageButton
            android:id="@+id/notification_close"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_button_black"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_margin="15dp"
            android:layout_marginRight="5dp"
            />

        <ImageButton
            android:id="@+id/notification_playpause"
            android:layout_toLeftOf="@id/notification_close"
            android:background="@drawable/notification_template_icon_bg"
            android:layout_width="25dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>


</LinearLayout>