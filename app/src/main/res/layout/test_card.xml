<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sermon_list_item_titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:text="Sermon Title"
                />
            <TextView
                android:id="@+id/sermon_list_item_pastorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sermon_list_item_titleTextView"
                android:paddingRight="4dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="Pastor Min"
                />

            <TextView
                android:id="@+id/sermon_list_item_dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sermon_list_item_pastorName"
                android:paddingLeft="25dp"
                android:paddingRight="4dp"
                android:paddingBottom="18dp"
                android:text="Sermon date"
                />

            <Button
                android:id="@+id/sermon_list_item_playbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/play_button"
                android:drawableStart="@android:drawable/ic_media_play"
                android:drawableLeft="@android:drawable/ic_media_play"
                android:layout_below="@+id/sermon_list_item_titleTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="35dp"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>