<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#eeeeee"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardMaxElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/sermon_list_item_titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:text="Sermon Title"
                />
            <TextView
                android:id="@+id/sermon_list_item_pastorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sermon_list_item_titleTextView"
                android:paddingRight="4dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="Pastor Min"
                />

            <TextView
                android:id="@+id/sermon_list_item_dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sermon_list_item_pastorName"
                android:paddingLeft="25dp"
                android:paddingRight="4dp"
                android:text="Sermon date"
                />


            <Button
                android:id="@+id/sermon_list_item_playbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/listen_button"
                android:drawableStart="@android:drawable/ic_media_play"
                android:drawableLeft="@android:drawable/ic_media_play"
                android:layout_below="@id/sermon_list_item_dateTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/red"
                android:textColor="@color/white"

                />

            <Button
                android:id="@+id/sermon_list_item_downloadbutton"
                android:text="@string/download_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:drawableStart="@android:drawable/stat_sys_download"
                android:drawableLeft="@android:drawable/stat_sys_download"
                android:layout_alignTop="@+id/sermon_list_item_playbutton"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@color/red"
                android:textColor="@color/white"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>