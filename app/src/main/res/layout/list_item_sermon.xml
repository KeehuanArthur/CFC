<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardMaxElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/sermon_list_item_titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:text="Sermon Title"
                />
            <TextView
                android:id="@+id/sermon_list_item_pastorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sermon_list_item_titleTextView"
                android:paddingRight="4dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:text="Pastor Min"
                />
            <TextView
                android:id="@+id/sermon_list_item_passage"
                android:layout_below="@id/sermon_list_item_pastorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="Passage"
                />

            <TextView
                android:id="@+id/sermon_list_item_dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sermon_list_item_passage"
                android:paddingLeft="25dp"
                android:paddingRight="4dp"
                android:text="Sermon date"
                android:layout_marginBottom="20dp"
                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>